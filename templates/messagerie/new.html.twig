    <link rel="stylesheet" type="text/css" href="{{ asset("index.css") }}">
    <title>Profile {{ app.user.prenom }}</title>
    <style>
        /* Add your specific styles here */
        /* Add your specific styles here */


        .messagerie-container {
            color: white;
        }

        .messagerie-title {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .messagerie-form {
            max-width: 400px; /* Adjust the max width of the form */
        }

        .messagerie-create-button,
        .messagerie-back-button {
            display: inline-block;
            padding: 10px 15px;
            background-color: var(--secondary-color);
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            border: none;
            cursor: pointer;
            margin-right: 10px; /* Adjust the spacing between buttons */
        }

        .messagerie-create-button:hover,
        .messagerie-back-button:hover {
            background-color: #45a049; /* Change the color on hover if needed */
        }


    </style>
</head>
<body>
<nav>
    <div class="nav__logo">
        <a href="#"><img src="{{ asset('images/logo.png') }}" alt="logo" /></a>
    </div>
    <ul class="nav__links">
        <li class="link"><a href="#">Home</a></li>
        <li class="link"><a href="#">Program</a></li>
        <li class="link"><a href="#">Service</a></li>
        <li class="link"><a href="#">About</a></li>
        <li class="link"><a href="#">Community</a></li>
    </ul>

    {% if not app.user %}
        <a href="{{ path('app_login') }}">
            <button class="btn btn-login">Customer Area</button>
        </a>
    {% else %}
        {# Display the logout button if the user is logged in #}
        <a href="{{ path('app_logout') }}">
            <button class="btn">Logout</button>
        </a>
    {% endif %}
</nav>

        {% block body %}
            <div class="container">
                <div class="user-card messagerie-container">

                    <h1 class="messagerie-title">Create a new Messagerie</h1>

                    <div class="messagerie-form mb-3">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                    </div>

                    <button type="submit" class="messagerie-create-button">Create</button>
                    {{ form_end(form) }}

                    <a href="{{ path('app_messagerie_index') }}" class="messagerie-create-link">
                        <button type="button" class="messagerie-back-button">Back to list</button>
                    </a>
                </div>
            </div>
        {% endblock %}
