{% extends 'base.html.twig' %}

{% block title %}Messagerie index{% endblock %}

{% block body %}
    <h1>Messagerie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Date_message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for messagerie in messageries %}
            <tr>
                <td>{{ messagerie.id }}</td>
                <td>{{ messagerie.contenu }}</td>
                <td>{{ messagerie.dateMessage ? messagerie.dateMessage|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_messagerie_show', {'id': messagerie.id}) }}">show</a>
                    <a href="{{ path('app_messagerie_edit', {'id': messagerie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_messagerie_new') }}">Create new</a>
{% endblock %}
