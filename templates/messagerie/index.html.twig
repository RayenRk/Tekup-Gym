<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
            href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
            rel="stylesheet"
    />

    <link rel="stylesheet" type="text/css" href="{{ asset("index.css") }}">
    <title>Profile {{ app.user.prenom }}</title>
</head>
<body>
<nav>
    <div class="nav__logo">
        <a href="#"><img src="{{ asset('images/logo.png') }}" alt="logo" /></a>
    </div>
    <ul class="nav__links">
        <li class="link"><a href="#">Home</a></li>
        <li class="link"><a href="#">Program</a></li>
        <li class="link"><a href="#">Service</a></li>
        <li class="link"><a href="#">About</a></li>
        <li class="link"><a href="#">Community</a></li>
    </ul>

    {% if not app.user %}
        <a href="{{ path('app_login') }}">
            <button class="btn btn-login">Customer Area</button>
        </a>
    {% else %}
        {# Display the logout button if the user is logged in #}
        <a href="{{ path('app_logout') }}">
            <button class="btn">Logout</button>
        </a>
    {% endif %}
</nav>
<div class="container">
    <div class="user-card">

        {% block body %}
    <h1>Messagerie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Date_message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for messagerie in messageries %}
            <tr>
                <td>{{ messagerie.id }}</td>
                <td>{{ messagerie.contenu }}</td>
                <td>{{ messagerie.dateMessage ? messagerie.dateMessage|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_messagerie_show', {'id': messagerie.id}) }}">show</a>
                    <a href="{{ path('app_messagerie_edit', {'id': messagerie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_messagerie_new') }}">Create new</a>
{% endblock %}
